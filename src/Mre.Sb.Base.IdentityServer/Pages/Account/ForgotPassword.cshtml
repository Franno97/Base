@page
@inject IHtmlLocalizer<AccountResource> L
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@model Mre.Sb.Base.Cuenta.PersonalizacionForgotPasswordModel
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout

    <script>


    document.addEventListener("DOMContentLoaded", function (event) {

        $('form').submit(function () {
            if ($(this).valid()) {
                var texto = $('.btn-block.btn-primary').text();
                $('.btn-block.btn-primary').html('<span class="spinner-border spinner-border" role="status" aria-hidden="true"></span>').attr('disabled', true);
                $(':submit', this).attr('disabled', 'disabled');
            }
        });
    });

    </script>

<div class="card mt-3 shadow-sm rounded">
    <div class="card-body p-5">
        <h4>@L["ForgotPassword"]</h4>
        <form method="post" class="mt-4">
            <p>@L["SendPasswordResetLink_Information"]</p>
            <abp-input asp-for="Email"/>

            <abp-button button-type="Primary"  type="submit" class="btn-block btn-lg mt-3">@L["Submit"]</abp-button>

            <a asp-page="./Login" asp-all-route-data="@(new Dictionary<string, string> {{"returnUrl", Model.ReturnUrl}, {"returnUrlHash", Model.ReturnUrlHash}})">
                <i class="fa fa-long-arrow-left"></i> @L["Login"]
            </a>
        </form>
    </div>
</div>
